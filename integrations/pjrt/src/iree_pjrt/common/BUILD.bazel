cc_library(
    name = "stubs",
    textual_hdrs = [ "stubs.inc" ],
    includes = [ "." ],
)

cc_library(
    name = "compiler",
    hdrs = [ "compiler.h" ],
    srcs = [
      "hlo_partitioner.cc",
      "iree_compiler.cc",
    ],
    deps = [
        ":debugging",
        "//compiler/bindings/c:headers",
        "//compiler/bindings/c:loader",
        "//integrations/pjrt/src/iree_pjrt/partitioner_api:loader",
        "//integrations/pjrt/src/iree_pjrt/partitioner_api:partitioner_api",
    ],
)

cc_library(
    name = "debugging",
    hdrs = [ "debugging.h" ],
    srcs = [ "debugging.cc" ],
    includes = [ "../../" ],
)

cc_library(
    name = "dylib_platform",
    hdrs = [ "dylib_platform.h" ],
    srcs = [ "dylib_platform.cc" ],
    deps = [
        ":common",
        ":debugging",
        "//runtime/src/iree/base/internal:file_io",
        "//runtime/src/iree/base/internal:path",
    ],
)