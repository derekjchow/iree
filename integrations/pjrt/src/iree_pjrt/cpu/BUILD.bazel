cc_library(
    name = "dylib",
    srcs = [ "dylib_entry_point.cc" ],
    alwayslink = True,
    defines = [
        "PJRT_PLUGIN_BUILDING_LIBRARY",
    ],
    deps = [
        ":client",
        "//integrations/pjrt/src/iree_pjrt/common",
        "//integrations/pjrt/src/iree_pjrt/common:dylib_platform",
    ],
)

cc_shared_library(
    name = "iree_pjrt_cpu_dylib",
    deps = [
        ":dylib",
    ],
)